---
/**
 * 基本界面布局
 */
import BaseHead from '~/components/BaseHead.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import { siteConfig } from '~/consts.ts';

interface Props {
    title?: string;
    description?: string;
    image?: string;
    articleDate?: string;
    katex?: boolean;
}

const {
    title = '',
    description = siteConfig.description,
    image,
    articleDate,
    katex,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <BaseHead
            title={title}
            description={description}
            image={image}
            articleDate={articleDate}
            katex={katex}
        />
    </head>
    <body>
        <Header />
        <main class="py-6 md:py-8">
            <section>
                <slot />
            </section>
        </main>
        <Footer />
    </body>
</html>
