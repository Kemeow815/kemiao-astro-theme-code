---
import BaseLayout from '~/layouts/Base.astro';
---

<BaseLayout title="404">
    <section
        class="flex flex-col md:flex-row justify-center items-center border-dashed border border-textColor h-80"
    >
        <div class="flex-col gap-2 text-7xl p-4 h-min">
            <span id="status-code" class="text-textColor"> 404</span>
            <div class="border-b-2 border-text w-full border-solid blink mt-1">
            </div>
        </div>
        <span class="text-lg">{'这儿没你想看的信息 {{{(>_<)}}}'}</span>
    </section>
</BaseLayout>

<style>
    @reference "~/styles/global.css";

    #status-code:before {
        content: './';
        @apply -mr-8 text-textColor text-7xl;
    }

    .blink {
        animation: blink-animation 1.5s steps(2, start) infinite;
        -webkit-animation: blink-animation 1.5s steps(2, start) infinite;
    }

    @keyframes blink-animation {
        to {
            visibility: hidden;
        }
    }

    @-webkit-keyframes blink-animation {
        to {
            visibility: hidden;
        }
    }
</style>
